<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :model %>
    <%= f.text_field :model, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :sku %>
    <%= f.text_field :sku, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>


  <div class="field">
    <%= f.label :price, 'Precio en Mercado' %>
    <%= f.text_field :price_correa, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :price, 'Precio Sugerido' %>
    <%= f.text_field :price, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :imagenurl %>
    <%= f.text_field :imagenurl, class: 'form-control' %>
  </div>


  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image, label: "Sube tu imagen (opcional)" %>
  </div>

  <div class="field">
    <%= f.label :qty %>
    <%= f.number_field :qty, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :finish_at %>
    <%= f.datetime_field :finish_at, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :start_at %>
    <%= f.datetime_field :start_at, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-default'%>
  </div>
<% end %>
